#!/usr/bin/env ys-0

ROOT =: ENV.ROOT ||
  die("'ROOT' env var not defined")

defn main():
  plan =: load("$ROOT/.version.ys")

  each p plan:
    .{:strs [vers bump all]} =: p
    each b bump:
      .{:strs [regx file]} =: b
      regx =: rx(regx)
      each f file:
        f =: "$ROOT/$f"
        text =: slurp(f)
        m =: re-matcher(regx text)
        if re-find(m):
          do:
            +[x m1 m2] =: re-groups(m)
            replace =:
              if all:
                str/replace
                str/replace-first
            spit f:
              replace:
                text regx
                str/re-quote-replacement("$m1$vers$m2")
            say: "Bumped '$f'"
          warn: +['No Match!!' f regx]

  shell {:dir 'rust'}: 'cargo update'
